# Environment Variables Configuration

# ===========================================
# LLM Configuration
# ===========================================

# Groq API (Primary option - FAST inference)
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.1-70b-versatile
# Alternative Groq models: mixtral-8x7b-32768, llama-3.1-8b-instant

# Ollama (Fallback - local LLM)
# OLLAMA_BASE_URL=http://localhost:11434
# OLLAMA_MODEL=llama3.1:8b

# ===========================================
# Embedding Models
# ===========================================

# Text Embeddings (Hugging Face)
TEXT_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
HUGGINGFACE_TOKEN=your_hf_token_here_optional

# Image Embeddings (CLIP - Open Source via Hugging Face)
IMAGE_EMBEDDING_MODEL=openai/clip-vit-base-patch32
# Alternative: laion/CLIP-ViT-B-32-laion2B-s34B-b79K

# ===========================================
# Vector Database
# ===========================================

# ChromaDB settings
CHROMA_PERSIST_DIR=./data/chroma_db
CHROMA_COLLECTION_TEXT=ai_ml_docs
CHROMA_COLLECTION_IMAGES=ai_ml_images

# ===========================================
# Retrieval Settings
# ===========================================

# Number of results to retrieve
TOP_K_TEXT=10
TOP_K_IMAGES=5

# Similarity thresholds (0.0 - 1.0)
MIN_SIMILARITY_SCORE=0.5

# ===========================================
# Chunking Configuration
# ===========================================

CHUNK_SIZE=512
CHUNK_OVERLAP=50

# ===========================================
# Data Paths
# ===========================================

DATA_RAW_DIR=./data/raw
DATA_PROCESSED_DIR=./data/processed
IMAGES_DIR=./data/processed/images

# ===========================================
# arXiv Download Settings
# ===========================================

ARXIV_CATEGORIES=cs.LG,cs.AI,cs.CV
ARXIV_MAX_RESULTS=50

# ===========================================
# UI Settings
# ===========================================

STREAMLIT_PORT=8501
UI_THEME=light

# ===========================================
# Evaluation
# ===========================================

EVAL_DATASET_PATH=./eval/test_queries.json
EVAL_OUTPUT_DIR=./eval/results
