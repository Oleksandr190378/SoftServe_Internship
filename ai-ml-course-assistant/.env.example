# Environment Variables Configuration

# ===========================================
# OpenAI API Configuration (REQUIRED)
# ===========================================

# OpenAI API Key - Used for:
# - Text embeddings (text-embedding-3-small)
# - Image captioning (GPT-4o-mini Vision)
# - Answer generation (GPT-4o-mini)
OPENAI_API_KEY=your_openai_api_key_here

# Get your API key from: https://platform.openai.com/api-keys

# ===========================================
# Vector Database
# ===========================================

# ChromaDB settings
CHROMA_PERSIST_DIR=./data/chroma_db
CHROMA_COLLECTION_TEXT=ai_ml_docs
CHROMA_COLLECTION_IMAGES=ai_ml_images

# ===========================================
# Retrieval Settings
# ===========================================

# Number of results to retrieve
TOP_K_TEXT=10
TOP_K_IMAGES=5

# Similarity thresholds (0.0 - 1.0) for image verification
SIMILARITY_THRESHOLD=0.5        # Same-page images
SIMILARITY_THRESHOLD_NEARBY=0.65  # Nearby (Â±1 page) images

# ===========================================
# Chunking Configuration
# ===========================================

CHUNK_SIZE=512
CHUNK_OVERLAP=50

# ===========================================
# Data Paths
# ===========================================

# Data directories (automatically created by setup script)
DATA_DIR=./data
DATA_RAW_DIR=./data/raw
DATA_PROCESSED_DIR=./data/processed
IMAGES_DIR=./data/processed/images
CHUNKS_BACKUP_DIR=./data/chunks_backup

# ===========================================
# arXiv Download Settings
# ===========================================

ARXIV_CATEGORIES=cs.LG,cs.AI,cs.CV
ARXIV_MAX_RESULTS=50

# ===========================================
# UI Settings
# ===========================================

STREAMLIT_PORT=8501
UI_THEME=light

# ===========================================
# Evaluation
# ===========================================

EVAL_DATASET_PATH=./eval/test_queries.json
EVAL_OUTPUT_DIR=./eval/results
